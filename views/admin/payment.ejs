            <li><a href="/login"><span class="material-symbols-outlined">Logout</span>Logout</a></li>
        </ul>
        
    </aside>
<main class="main-content">
    <div class="top">
        <div class="sticky-header">
            <h4>Renter Details</h4>    
        </div>    

        <!-- Renter Details Table -->
        <div class="table-container">
            <table class="renter-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age/Gender/Civil Status</th>
                        <th>Address</th>
                        <th>Contact No.</th>
                        <th>School/Employment</th>
                        <th>Monthly Rent</th>
                        <th>Room Type</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Jennifer Damitan</td>
                        <td>20/Female/Single</td>
                        <td>Brgy. Kalipay, Gingoog City, Misamis Oriental</td>
                        <td>09169-469-864</td>
                        <td>GICC Student</td>
                        <td>₱ 1,500</td>
                        <td>
                            <select>
                                <option>Room Type</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Monthly Rent and Deposit -->
        <div class="sticky-header">
            <h4>Monthly Rent and Deposit</h4>
        </div>

        <div class="table-container">
            <table class="payment-table">
                <thead>
                    <tr>
                        <th>Deposit Amount</th>
                        <th>Partial Deposit</th>
                        <th>Partial Date</th>
                        <th>Balance Deposit</th>
                        <th>Payment Status</th>
                        <th>Date Paid</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>₱ 1,500</td>
                        <td>₱ 500</td>
                        <td>10/21/25</td>
                        <td style="color:red;">₱ 1,000</td>
                        <td style="color:green;">PAID</td>
                        <td>10/29/25</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Monthly Due Table -->
        <div class="table-container">
            <table class="monthly-due-table">
                <thead>
                    <tr>
                        <th>Monthly Due Date</th>
                        <th>Monthly Rent</th>
                        <th>Date Paid</th>
                        <th>Amount Paid</th>
                        <th>Remaining Balance</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>11/29/25</td>
                        <td>₱ 1,500</td>
                        <td>00/00/00</td>
                        <td>₱ 0.00</td>
                        <td style="color:red;">₱ 0.00</td>
                        <td></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th>TOTAL PAYMENT</th>
                        <th>₱ 1,500</th>
                        <th colspan="4" style="color:red;">₱ 0.00</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</main>



</body>

</html>
       